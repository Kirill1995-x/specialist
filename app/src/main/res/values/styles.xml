<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/color_for_text</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyleForMessage" parent="NoActionBar">
        <item name="android:textColorHint">@color/color_for_hint_messages</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">@dimen/size_of_text_for_item</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/size_of_small_height</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styles for Button-->
    <style name="DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_of_text_for_buttons</item>
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="ButtonStyle" parent="DefaultButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_for_button</item>
        <item name="android:paddingEnd">@dimen/padding_for_button</item>
    </style>
    <style name="ButtonStyleLeft" parent="DefaultButtonStyle">
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="ButtonStyleRight" parent="DefaultButtonStyle">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <!--Styles for TextView-->
    <style name="DefaultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_size</item>
    </style>
    <style name="TextStyle" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="TextStyleForFile" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/common_padding</item>
        <item name="android:paddingEnd">@dimen/common_padding</item>
    </style>
    <style name="TextStyleForImportantHint" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_important_hint</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="TextStyleForLink" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_link_for_document</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="TextStyleForMessageOfDialog" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_dialog</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="TextStyleForActionBar" parent="DefaultTextView">
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextStyleForLogin" parent="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="TextStyleTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:textSize">@dimen/size_for_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="TextStyleForTitle" parent="TextStyleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextStyleForTitleOfDialog" parent="TextStyleForTitle">
        <item name="android:textColor">@color/color_for_dialog</item>
    </style>
    <style name="TextStyleForSearching" parent="TextStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Styles for Spinner-->
    <style name="DefaultSpinnerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_for_Spinner</item>
    </style>
    <style name="SpinnerStyleForBirth" parent="DefaultSpinnerStyle" />
    <style name="SpinnerStyle" parent="DefaultSpinnerStyle" />
    <style name="SpinnerLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_size</item>
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>
    <style name="SpinnerDropdownLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_size</item>
        <item name="android:textColor">@color/color_for_spinner</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>

    <!--Styles for ImageView-->
    <style name="ImageViewStyle">
        <item name="android:layout_width">@dimen/layout_width_for_ImageView</item>
        <item name="android:layout_height">@dimen/layout_height_for_ImageView</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_for_ImageView</item>
        <item name="android:layout_marginBottom">@dimen/layout_marginBottom_for_ImageView</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ic_account</item>
    </style>
    <style name="ImageViewListStyle">
        <item name="android:layout_width">@dimen/layout_width_for_ImageView_in_ListView</item>
        <item name="android:layout_height">@dimen/layout_height_for_ImageView_in_ListView</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_account</item>
    </style>
    <style name="ImageViewInLogin">
        <item name="android:layout_width">@dimen/size_of_width_for_icon</item>
        <item name="android:layout_height">@dimen/size_of_height_for_icon</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/specialist</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_for_ImageView</item>
    </style>
    <style name="ImageViewInNavHeaderMain">
        <item name="android:layout_width">@dimen/layout_width_for_ImageView_in_nav_header_main
        </item>
        <item name="android:layout_height">@dimen/layout_height_for_ImageView_in_nav_header_main
        </item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_account</item>
    </style>


    <!--Styles for EditText-->
    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_size</item>
    </style>
    <style name="DefaultEditTextWhiteColor" parent="DefaultEditText">
        <item name="android:textColor">@color/color_for_text</item>
    </style>
    <style name="DefaultEditTextBlackColor" parent="DefaultEditText">
        <item name="android:textColor">@color/color_for_dialog</item>
    </style>
    <style name="EditTextStyle" parent="DefaultEditTextWhiteColor">
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>
    <style name="EditTextStyleForTextLine" parent="DefaultEditTextWhiteColor">
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoCorrect</item>
    </style>
    <style name="EditTextStyleForTextLineBlack" parent="DefaultEditTextBlackColor">
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoCorrect</item>
        <item name="android:textColorHint">@color/color_for_hint_messages</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>
    <style name="TextInputEditTextStyle" parent="DefaultEditTextWhiteColor" />
    <style name="TextInputLayoutForDialog" parent="DefaultEditTextBlackColor">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:textColorHint">@color/color_for_dialog</item>
    </style>
    <style name="TextInputEditTextForDialog" parent="DefaultEditTextBlackColor">
        <item name="android:inputType">textPassword</item>
    </style>


    <!--Style for CheckBox-->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_size</item>
        <item name="android:textColor">@color/color_for_text</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
    </style>

    <!--Style for SplashScreen-->
    <style name="SplashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
