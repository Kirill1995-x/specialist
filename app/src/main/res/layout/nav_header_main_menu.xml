<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingStart="@dimen/activity_horizontal_margin_left"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin_right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:contentDescription="@string/contentDescriptionOpenProfile"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        style="@style/ImageViewInNavHeaderMain" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_for_text"
        android:textSize="@dimen/main_size"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/marginTop"/>

</LinearLayout>
